var threeSumClosest = function(nums, target) {
    if (nums.length == 0) {
    	return 0;
    }
    var sum = 0;
    for (var i = 0; i < nums.length; i++) {
    	var losest;
    	var left = i + 1;
    	var right = nums.length - 1;
    	while(left < right) {
    		console.log(left);
    		console.log(right);
    		if (nums[i] + nums[left] + nums[right] == target) {
    			return target;
    		}
    		if (nums[left] + nums[right] > target - nums[i]) {
    			var temp = target - nums[i] - nums[left] - nums[right];
    			temp = temp < 0 ? -temp : temp;
    			if (closest == undefined) {
    				closest = temp;
    				sum = nums[left] + nums[right] + nums[i];
    			} else {
    				if (temp < closest) {
    					closest = temp;
    					sum = nums[left] + nums[right] + nums[i];
    				}
    			}
    			right--;
    		} else {
    			var temp = target - nums[i] - nums[left] - nums[right];
    			temp = temp < 0 ? -temp : temp;
    			if (closest == undefined) {
    				closest = temp;
    				sum = nums[left] + nums[right] + nums[i];
    			} else {
    				if (temp < closest) {
    					closest = temp;
    					sum = nums[left] + nums[right] + nums[i];
    				}
    			}
    			left++;
    		}
    	}
    }
    return sum;
};